
@model Trip_Advisor_Web.Models.LogInModel
   
 @{
        ViewBag.Title = "Home page";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }


<div class="indexContainer col-lg-12 col-md-12 col-sm-12">
    <div class="col-lg-6 col-md-6 col-sm-6 " id="indexPage">
        <h1>Trip advisor</h1>
        <p id="appInfo">
            Our application is all you need to plan your journey and gain basic info about some of the most visited places around the world. 
            Our main goal is to give you recommendations on which places you can visit, ones  that suit your interests the best and onnect you with all your traveler friends, so that you can contact them at any time and have insight on their current locations and reviews.     
        </p>
        <br />  
        <h4>  @Html.ActionLink("Register now", "Registration", "Registration") for free and enjoy using our site. </h4>  

    </div>

    <form method="post" action="@Url.Action("LogIn", "Home")">
        <div class="col-lg-6 col-md-6">
        </div>
        <div class="col-lg-6 col-md-6">
            <div class="form-horizontal formaPrijavaPocetna">
                <div class="usrPass">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username, new { @class = "col-md-4 col-sm-6 control-label", @id = "usernameLbl" })
                        <div class="col-md-5 col-sm-6">
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @name = "username", })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-4 col-sm-6 control-label", @id = "passwordLbl" })
                        <div class="col-md-5 col-sm-6">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @name = "password", @id = "Password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2"></div>
                    @*<div class="col-md-6">
                            <input type="checkbox" id="potvrdiLozinku" />
                            <label id="ll1">Remember password</label>
                        </div>*@
                </div>
                <div class="form-group">
                    <div class="col-md-2"></div>
                    <div class="col-md-6">
                        <button id="Button1" title="Prijava" class="btn btn-default btn-validate"><span class="glyphicon glyphicon-user"></span> Login</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2"></div>
                    <div class="col-md-6">
                        <label id="lblError" class="text-danger">
                            @if (ViewBag.BadLogin != null && ViewBag.BadLogin)
                            {
                                <p>Username does not exist or password is wrong.</p>
                            }
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>